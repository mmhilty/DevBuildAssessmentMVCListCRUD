
@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>

<form action="Registration" method="post" class="form-group">
    <input type="hidden" name="GuestID" />
    <p>First Name:</p>
    <input type="text" name="FirstName" required />
    <p>Last Name:</p>
    <input type="text" name="LastName" required />
    <p>Email:</p>
    <input type="email" name="Email" required /><br /><br />
    <p>Will you be attending?</p>
    <input type="radio" name="Attending" value="yes" required /> Yes
    <input type="radio" name="Attending" value="no" /> No <br /><br />
    <p>Date Attending:</p>
    <input type="radio" name="Date" value="12/16/18" /> December 16th at 7pm <br />
    <input type="radio" name="Date" value="12/17/18" /> December 17th at 5pm <br />
    <input type="radio" name="Date" value="none" checked class="hidden" /> <br />
    <p>Guest Name (if bringing):</p>
    <input type="text" name="GuestName" value="" /><br />
    Password: <br />
    <input type="password" name="Password" required/><br /><br />
    Who is bae?<br />
               <select name="CharacterName">
                   <option  value="arya%20stark">Arya Stark</option>
                   <option  value="brienne%20of%20tarth">Brienne of Tarth</option>
                   <option  value="cersei%20lannister">Cersei Lannister</option>
                   <option  value="daenerys%20targaryen">Daenerys Targaryen</option>
                   <option value="margaery%20tyrell">Margaery Tyrell</option>
                   <option value="sansa%20stark">Sansa Stark</option>
                   <option value="ygritte">Ygritte</option>
               </select><br /><br />

    <input type="submit" value="Submit" />
</form>